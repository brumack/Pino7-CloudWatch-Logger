{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "declaration": true,
        "lib": [
            "es2017"
        ],
        "module": "commonjs",
        "target": "es2017",
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "types": ["jest","node"],
        "typeRoots": [
            "@types", 
            "./node_modules/@types"        
        ]
    },
    "include": ["./src/**/*", "./types/*"]
}